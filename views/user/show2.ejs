<%- include ("../partials/header") %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">DBMS APP</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <div class="caption-full">
                        <h4 class="pull-right">HELLO!</h4>
                        <h4>
                            <a>
                                <%=user.username%>
                            </a>
                        </h4>
                        <p>
                            <%= user._id %>
                        </p>
                        <p>
                            <%= user.mobile %>
                        </p>
                        <p>
                            <%= user._city %>
                        </p>

                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-dark" href="/users">See all users</a>
                        <a class="btn btn-light" href="/posts">See all posts</a>

                        <a class="btn btn-success" href="/user/<%= user._id %>/post/new">Add New Post</a>

                        <a class="btn btn-primary" href="/user/<%= user._id %>/chat">CHAT</a>
                      
                        <% if(!currentUser){ %>
                            <a class="btn btn-primary" href="/login">LOGIN TO SEE MORE FUNCTIONALITIES!</a>

                            <% } else { %>
                                <% if(currentUser._id.toString()==user._id.toString()){ %>
                                    <!-- <h5>You are <%=user.username%>'s friend!! :)</h5> -->
                                    <% } else { %>

                                        <% if(typeof flag!="undefined"){ %>
                                        
                                        <% if(flag==1){ %>
                                            <h3>You both are friends!!</h3>
                                            <% } else { %>


                                                <a class="btn btn-primary" href="/user/<%= user._id %>/friend">ADD FRIEND!</a>

                                                <% } %>
                                                <% } %>
                                                
                                                    <% } %>



                                                        <% } %>

                    </div>
                </div>
            </div>
        </div>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% user.posts.forEach(function(post){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= post.image %>" alt="https://img.traveltriangle.com/blog/wp-content/uploads/2020/01/cover-for-Places-To-Visit-In-Rishikesh-In-May_16-Jan.jpg">
                        <div class="caption">
                            <h4>
                                <%= post.name %>
                            </h4>
                        </div>
                        <p>
                            <a class="btn btn-success" href="/post/<%= post._id %> ">Show Post</a>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>

    </div>

    <%- include ("../partials/footer") %>