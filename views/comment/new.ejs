<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/post/<%=post._id%>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment text">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/post/<%=post._id%>/">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>

