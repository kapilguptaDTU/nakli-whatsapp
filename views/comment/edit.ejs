<%- include ("../partials/header") %> 
<h3>EDIT COMMENT</h3>

<form action="/comment/<%=comment._id%>" method="POST" autocomplete="off" >
    <div class="form-group">
        <label >Author</label>
        <input type="text" class="form-control" name="comment[author]" placeholder="Author" value="<%=comment.author%>">
    </div>
    <div class="form-group">
        <label >Text</label>
        <input type="text" class="form-control" name="comment[text]" placeholder="Text" value="<%=comment.text%>">
    </div>
<div class="form-group">
    <button type="submit" class="btn btn-info">Submit</button>
<a class="btn btn-secondary"href="/users"><i class="fa fa-list-alt"></i>View All employees</a>
</div>
</form>
 

