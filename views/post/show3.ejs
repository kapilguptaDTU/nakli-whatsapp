<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:wght@700&display=swap" rel="stylesheet">

  <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/postshow3.css">
</head>
<body style="font-family: 'Montserrat Alternates', sans-serif;">
<div class="container">
<div class="wrapper" style="    justify-content: center;">
  
    <div class="blog-item" >
        <div class="blog-image">
          <img src="<%=post.image%>" alt="https://www.thebalancesmb.com/thmb/9-TaSUt-qCdOp1Xh3P43mutTmeA=/2121x1414/filters:fill(auto,1)/GettyImages-887987150-5c770377c9e77c00011c82e6.jpg">
        </div>
        <div class="blog-content">
          <h3 class="blog-title"><%=post.name%></h3>
          <span class="blog-date"style="text-transform: uppercase; "><%=post.author%></span>
          <p class="blog-caption" style="text-transform: uppercase; "><%=post.description%></p>
          <a class="btn btn-red" href="/post/<%= post._id %>/update">EDIT IT!!!</a>
          <a class="btn btn-blue" href="/post/delete/<%= post._id %>/">DELETE POST!!!</a>
          
          <a class="btn btn-blue" href="/posts" style="color:crimson;">SEE ALL POSTS!!</a>
          
        </div>
      </div>
      <div class="blog-item" style="flex: 0 0 88%;max-width: -webkit-fill-available;
      word-break: break-word;">
        <div class="blog-content">
          <h3 class="blog-title"> <a class="btn " style="color:blue;" href="/post/<%= post._id %>/comment/new">Add New Comment!</a>
          </h3>
          <span class="blog-date"style="text-transform: uppercase; "><%=post.author%></span>
          <p class="blog-caption" style="text-transform: uppercase; "><%=post.description%></p>
          
          <% replies.forEach(function(reply){ %>
            <div class="row">
                <div class="col-md-12">
                    <strong><%= reply.author %></strong>
                    <span class="pull-right">10 days ago</span>
                    <p>
                        <%= reply.text%> 
                    </p>
                    <a class="btn btn-red" href="/comment/<%= reply._id %>/update">Update</a>
            
                    <a class="btn btn-dark" href="/comment/delete/<%= reply._id %>">Delete</a>
                    <div class="text-right">
                        <a class="btn btn-primary" href="/comment/<%= reply._id %>/reply">Reply</a>
                    </div>
               <br>   
               <hr>                         
            <!-- <hr><a class="btn btn-danger" href="/comment/<%= reply._id %>">Show all replies on this comment</a> -->
               
            <hr>
               
               <br>   
               <hr>
               <div class="replyofcomment" style="padding-left:100px;">
               <% reply.childComments.forEach(function(replyoncomment){ %>
                <strong><%= replyoncomment.author %></strong>
                <span class="pull-right">1 day agoo</span>
                <p>
                        <!-- <%= reply%> -->
                    <%= replyoncomment.text%>  
                </p>
                <div class="text-right">
                <a class="btn btn-dark" href="/comment/<%= replyoncomment._id %>/reply">Reply</a>
            </div>
                <br>   
           <hr>     
                <% }) %>
                <hr><hr>
            </div>
                </div>
            </div>
        <% }) %>
        </div>
      </div>
    
      
    </div>
    </div>
      
    </body>
    </html>
    